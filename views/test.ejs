<%- include('./header') %>
    <div class="container">
    <br>
    <h2>Create Test</h2>
    </br>
    <div class="row">
        <div class="col-md-6">
            <form method="POST">
                <label class="text-danger">  </label>
                <div class="form-group">
                    <label for="test">Name:</label>
                    <input type="text" required placeholder="E.g. Week 1 Quiz" name="name" id="test" class="form-control"><br>
                </div>
                <div class="form-group">
                    <label for="starttime">Start Date:</label>
                    <input type="date" required  name="starttime" id="starttime" class="form-control"><br>
                </div>

                <div class="form-group">
                    <label for="endtime">End Date:</label>
                    <input type="date" required  name="endtime" id="endtime" class="form-control"><br>
                </div>
                <div class="form-group">
                    <label for="course">Course:</label>
                    <select id="course" name="course" class="form-control">
                        <%
                            for(var i = 0; i < courses.length; i++){
                                %>
                                    <option value='<%= courses[i]._id %>'><%= courses[i].name %></option>
                                <%
                            }
                            
                        %>
                    </select>
                </div>
                
                

                <input type="submit" class="form-control btn-success" value="Create" />
            </form>
        </div>
        <div class="col-md-6">
            <img src="/TestImg.png" width="250">
        </div>
    </div>

</div>
<hr>
<div class="container">
    <h3>List of Tests</h3>
    <div class="row">
        <% 
    var n=0;
    for(var i=0; i < tests.length; i++) { %>
    <div class="card" style="width:300px; margin: 1%">
        <img class="card-img-top" src="/exam.jpg" alt="Card image" style="width:100%">
        <div class="card-body">
            <div class="row">
                <div class="col-md-7">
                    <h4 class="card-title"><%= tests[i].name %></h4>
                </div>
                <div class="col-md-5">
                    <h6 class="text-right text-muted"><%= tests[i].startDate %></h6>
                </div>
            </div>
          
            <p class="card-text text-muted"><%= tests[i].course.name %></p>
          <a href='/test/question?id=<%= tests[i]._id %>' class="btn btn-primary" alt="Open"><i class="fas fa-pen" alt="Open"></i></a>
          <a href='/test/delete/<%= courses[i]._id %>' class="btn btn-danger float-right"><i class="fas fa-trash"></i></a>
        </div>
    </div>
    <% 
    n = n + 1;
    if(n == 4)
    {
        n=0;
    }
    %><br> <%
    } %>
    </div>
    
</div>

</body>
</html>